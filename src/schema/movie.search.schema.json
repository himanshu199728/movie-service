{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://movie-search.com/content.json",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "id": {
            "type": "string",
            "description": "Id of movie in local database"
        },
        "year": {
            "type": "array",
            "items": {
                "type": "string",
                "pattern": "^[1-2][0-9]{3}"
            }
        }
    },
    "rating": {
        "type": "object",
        "description": "Year in which launch",
        "properties": {
            "operator": {
                "type": "string",
                "enum": [
                    "GT",
                    "LT",
                    "GTE",
                    "LTE",
                    "EQ"
                ]
            },
            "value": {
                "type": "number"
            }
        }
    },
    "genres": {
        "type": "array",
        "items": {
            "type": "string"
        }
    }
}